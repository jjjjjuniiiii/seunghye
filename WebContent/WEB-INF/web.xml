	id="WebApp_ID" version="3.0">
	
	<jsp-config>	
		<jsp-property-group>
			<url-pattern>/WEB-INF/views/page/*</url-pattern>
			<include-prelude>/WEB-INF/views/common/header.jsp</include-prelude>
			<include-prelude>/WEB-INF/views/common/menubar.jsp</include-prelude>
			<include-coda>/WEB-INF/views/common/footer.jsp</include-coda>
		</jsp-property-group>
	</jsp-config>
	
	
	
